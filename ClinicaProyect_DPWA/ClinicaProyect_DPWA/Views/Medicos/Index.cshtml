@model IEnumerable<ClinicaProyect_DPWA.Models.Medico>

@{
    ViewBag.Title = "Lista de médicos";
}

<link href="~/Content/AdminLTE.css" rel="stylesheet" />
<div class="box box-primary" style="margin-top:20px;">
    <div class="box-header">
        <h4 class="box-title">Listado de Medicos</h4>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-success" name="btnCrear" id="btnCrear" onclick="Crear()">
                <i class="fas fa-plus-square"></i> Crear Nuevo
            </button>
        </div>
    </div>

    <div class="box-body">
        @using (Html.BeginForm())
        {
            <input type="hidden" id="txtOcultar" value="@ViewBag.Accion" />
            <div class="row">
                <div class="col-sm-4"></div>
                <div class="col-sm-6" id="Filtro">
                    <div class="col-sm-10 form-inline">
                        <input type="text" name="txtBuscar" class="form-control col-sm-3" placeholder="Ingrese una palabra" />
                        <input class="btn btn-primary" type="submit" id="btnEnviar" value="Buscar" />
                    </div>
                </div>
            </div>
        }
        <hr />
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CategoriaMedico.NombreCategoria)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombres)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellidos)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaNacimiento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoriaMedico.NombreCategoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaNacimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.Id_Medico }, htmlAttributes: new { @class = "glyphicon glyphicon-pencil btn btn-success" })
                    @Html.ActionLink(" ", "Details", new { id = item.Id_Medico }, htmlAttributes: new { @class = "glyphicon glyphicon-eye-open btn btn-primary" })
                    @Html.ActionLink(" ", "Delete", new { id = item.Id_Medico }, htmlAttributes: new { @class = "glyphicon glyphicon-trash btn btn-danger" })
                </td>
            </tr>
            }

        </table>
    </div>
</div>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script>
    function Crear() {
        document.getElementById("btnCrear")
        location.href = "/Medicos/Create";
    }
</script>
