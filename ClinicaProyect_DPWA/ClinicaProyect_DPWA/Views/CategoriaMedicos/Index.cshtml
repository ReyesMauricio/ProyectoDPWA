@model IEnumerable<ClinicaProyect_DPWA.Models.CategoriaMedico>

@{
    ViewBag.Title = "Categoria de Medicos";
}

<h2>Lista de categorías</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", null,htmlAttributes: new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreCategoria)
        </th>
        <th colspan="3"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreCategoria)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id=item.Id_Categoria }, htmlAttributes: new { @class = "glyphicon glyphicon-pencil btn btn-success" })
            @Html.ActionLink(" ", "Details", new { id=item.Id_Categoria }, htmlAttributes: new { @class = "glyphicon glyphicon-eye-open btn btn-primary" })
            @Html.ActionLink(" ", "Delete", new { id=item.Id_Categoria }, htmlAttributes: new { @class = "glyphicon glyphicon-trash btn btn-danger" })
        </td>
    </tr>
}

</table>
