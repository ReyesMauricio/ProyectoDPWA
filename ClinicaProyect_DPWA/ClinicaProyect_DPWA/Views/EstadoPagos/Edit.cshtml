@model ClinicaProyect_DPWA.Models.EstadoPago

@{
    ViewBag.Title = "Edita estado de pago";
}

<h2>Editar estado de pago</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Formulario paraa la actualización de estados de pagos</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id_TipoDePago)

        <div class="form-group">
            @Html.LabelFor(model => model.EstadoDePago, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EstadoDePago, new { htmlAttributes = new { @class = "form-control", @placeholder="Ingrese el nombre del estado de pago" } })
                @Html.ValidationMessageFor(model => model.EstadoDePago, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(" ", "Index", null, htmlAttributes: new { @class = "glyphicon glyphicon-arrow-left btn btn-warning" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
