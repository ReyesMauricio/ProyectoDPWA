@model IEnumerable<ClinicaProyect_DPWA.Models.EstadoPago>

@{
    ViewBag.Title = "Estado de pagos";
}

<h2>Lista de estado de pago</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", null, htmlAttributes: new { @class="btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EstadoDePago)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EstadoDePago)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id=item.Id_TipoDePago }, htmlAttributes: new { @class = "glyphicon glyphicon-pencil btn btn-success" })
            @Html.ActionLink(" ", "Details", new { id=item.Id_TipoDePago }, htmlAttributes: new { @class = "glyphicon glyphicon-eye-open btn btn-primary" })
            @Html.ActionLink(" ", "Delete", new { id=item.Id_TipoDePago }, htmlAttributes: new { @class = "glyphicon glyphicon-trash btn btn-danger" })
        </td>
    </tr>
}

</table>
